<div class="card max-w-2xl mx-auto">
    <div class="bg-red-50 border-l-4 border-red-500 p-6 rounded-r-lg">
        <div class="flex items-center mb-4">
            <span class="text-3xl mr-3">‚ö†Ô∏è</span>
            <h3 class="text-xl font-semibold text-red-700"><%= title %></h3>
        </div>
        
        <p class="text-red-600 mb-4"><%= message %></p>
        
        <% if (typeof error !== 'undefined' && error.status) { %>
            <div class="bg-white p-3 rounded border border-red-200 mb-4">
                <span class="font-medium text-gray-700">Status:</span> 
                <span class="text-red-600 font-mono"><%= error.status %></span>
            </div>
        <% } %>
        
        <% if (typeof error !== 'undefined' && error.stack && process.env.NODE_ENV === 'development') { %>
            <details class="mt-4">
                <summary class="cursor-pointer text-sm font-medium text-gray-700 hover:text-gray-900 transition-colors">
                    Error Details (Development Mode)
                </summary>
                <pre class="mt-3 bg-gray-100 p-4 rounded-lg border overflow-x-auto text-xs font-mono text-gray-800"><%= error.stack %></pre>
            </details>
        <% } %>
    </div>

    <div class="flex flex-wrap gap-4 mt-8">
        <a href="/" class="btn-primary">
            <span class="mr-2">üè†</span>
            Back to Home
        </a>
        <a href="/api-docs" class="btn-primary">
            <span class="mr-2">üìñ</span>
            API Documentation
        </a>
        <a href="/api/health" class="btn-primary">
            <span class="mr-2">üè•</span>
            Health Check
        </a>
    </div>
</div> 