<div class="space-y-8">
    <!-- Status Card -->
    <div class="card">
        <div class="flex items-center space-x-3">
            <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
            <p class="text-green-700 font-semibold text-lg">Service is running</p>
        </div>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <div class="text-3xl font-bold text-blue-600"><%= stats.totalExtractions %></div>
            <div class="text-sm text-gray-600 mt-1">Total Extractions</div>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <div class="text-3xl font-bold text-green-600"><%= stats.completed %></div>
            <div class="text-sm text-gray-600 mt-1">Completed</div>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <div class="text-3xl font-bold text-yellow-600"><%= stats.processing %></div>
            <div class="text-sm text-gray-600 mt-1">Processing</div>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <div class="text-3xl font-bold text-red-600"><%= stats.failed %></div>
            <div class="text-sm text-gray-600 mt-1">Failed</div>
        </div>
    </div>

    <!-- Features Grid -->
    <div class="grid md:grid-cols-2 gap-8">
        <div class="feature-card">
            <h3 class="text-xl font-semibold text-blue-700 mb-3 flex items-center">
                <span class="text-2xl mr-2">🚀</span>
                Features
            </h3>
            <ul class="space-y-2 text-gray-700">
                <li class="flex items-start">
                    <span class="text-green-500 mr-2 mt-1">✓</span>
                    PDF, TXT, and DOCX document processing
                </li>
                <li class="flex items-start">
                    <span class="text-green-500 mr-2 mt-1">✓</span>
                    Automatic text extraction and summarization
                </li>
                <li class="flex items-start">
                    <span class="text-green-500 mr-2 mt-1">✓</span>
                    RESTful API with Swagger documentation
                </li>
                <li class="flex items-start">
                    <span class="text-green-500 mr-2 mt-1">✓</span>
                    File upload and processing status tracking
                </li>
            </ul>
        </div>

        <div class="feature-card">
            <h3 class="text-xl font-semibold text-blue-700 mb-3 flex items-center">
                <span class="text-2xl mr-2">📝</span>
                Supported File Types
            </h3>
            <div class="space-y-3">
                <div class="flex items-center p-3 bg-white rounded-lg shadow-sm">
                    <span class="text-red-500 text-2xl mr-3">📄</span>
                    <div>
                        <div class="font-medium text-gray-800">PDF</div>
                        <div class="text-sm text-gray-600">Portable Document Format</div>
                    </div>
                </div>
                <div class="flex items-center p-3 bg-white rounded-lg shadow-sm">
                    <span class="text-blue-500 text-2xl mr-3">📃</span>
                    <div>
                        <div class="font-medium text-gray-800">TXT</div>
                        <div class="text-sm text-gray-600">Plain text files</div>
                    </div>
                </div>
                <div class="flex items-center p-3 bg-white rounded-lg shadow-sm">
                    <span class="text-blue-600 text-2xl mr-3">📘</span>
                    <div>
                        <div class="font-medium text-gray-800">DOCX</div>
                        <div class="text-sm text-gray-600">Microsoft Word documents</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Links -->
    <div class="card">
        <h3 class="text-xl font-semibold text-gray-800 mb-6">Quick Actions</h3>
        <div class="flex flex-wrap gap-4">
            <a href="/api-docs" class="btn-primary">
                <span class="mr-2">📖</span>
                API Documentation
            </a>
            <a href="/api/health" class="btn-primary">
                <span class="mr-2">🏥</span>
                Health Check
            </a>
            <a href="/extractions" class="btn-primary">
                <span class="mr-2">📋</span>
                View Extractions
            </a>
        </div>
        
        <div class="mt-6 p-4 bg-gray-50 rounded-lg border border-gray-200">
            <p class="text-gray-700 text-sm">
                <span class="font-medium">Getting Started:</span> 
                Upload documents to <code class="bg-gray-200 px-2 py-1 rounded text-xs">/api/extractions/upload</code> 
                or use the API documentation for detailed instructions.
            </p>
        </div>
    </div>
</div> 