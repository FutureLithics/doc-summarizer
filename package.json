    "pdfkit": "^0.17.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^29.5.14",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.5",
    "@types/puppeteer": "^7.0.4",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^9.1.2",
    "jest": "^29.7.0",
    "puppeteer": "^23.9.0",
    "supertest": "^7.0.0",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.2.6",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  },
  "scripts": {
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./public/css/styles.css --watch",
    "build:css:prod": "tailwindcss -i ./src/styles/input.css -o ./public/css/styles.css --minify",
    "copy:views": "cp -r src/views dist/",
    "build": "npm run build:css:prod && tsc && npm run copy:views",
    "dev": "npm run build:css:prod && ts-node-dev --respawn src/server.ts",
    "start": "node dist/server.js",
    "test": "jest --detectOpenHandles",
    "test:unit": "jest --testPathIgnorePatterns=ui.test.ts --detectOpenHandles",
    "test:ui": "jest ui.test.ts --detectOpenHandles",
    "test:all": "npm run test:unit && npm run test:ui",
    "test:watch": "jest --watch --detectOpenHandles",
    "seed": "ts-node src/utils/seedDatabase.ts"
  }
}
